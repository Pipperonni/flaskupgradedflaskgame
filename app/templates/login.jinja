{% extends "base.jinja" %}

{% block content %}
    <h2>Login Page</h2>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{ form.email.label }} <br>
            {{ form.email(size=80) }}
        </p>
        <p>
            {{ form.password.label }} <br>
            {{ form.password(size=32) }}
        </p>
         <p>
            {{ form.remember.label }} <br>
            {{ form.remember() }}
        </p>
        <p>
            {{ form.submit(class='btn btn-primary') }}
        </p>
    </form>
{% endblock %}